    <!--</select>-->

    <select id="listGuide" resultMap="guide">
        SELECT *
        FROM
        (
        SELECT
        A.*,
        ROWNUM RN
        FROM (SELECT
        GUIDE_ID,
        GUIDE_NAME,
        GUIDE_ADDRESS,
        GUIDE_OUTLINE,
        GUIDE_TEL,
        GUIDE_OPENTIME,
        GUIDE_CLOSETIME,
        GUIDE_HISTORY,
        GUIDE_FEATURES,
        GUIDE_PICTURES
        FROM T_GUIDE
        WHERE ENABLED = 1
        <if test="name != null">
            AND GUIDE_NAME LIKE concat(concat('%',#{name}),'%')
        </if>
        <if test="address != null">
            AND GUIDE_ADDRESS LIKE concat(concat('%',#{address}),'%')
        </if>
        <if test="openTime != null and openTime != ''">
            AND GUIDE_OPENTIME &gt;= #{openTime}
        </if>
        <if test="closeTime != null and closeTime != ''">
            AND GUIDE_CLOSETIME &lt;= #{closeTime}
        </if>
        ) A
        WHERE ROWNUM &lt;= #{to}
        )
        WHERE RN &gt;= #{from}
    </select>

    <select id="count" resultType="java.lang.Integer">
        SELECT count(*)
        FROM T_GUIDE
        WHERE ENABLED = 1
        <if test="name != null">
            AND GUIDE_NAME LIKE concat(concat('%',#{name}),'%')
        </if>
        <if test="address != null">
            AND GUIDE_ADDRESS LIKE concat(concat('%',#{address}),'%')
        </if>
        <if test="openTime != null and openTime != ''">
            AND GUIDE_OPENTIME &gt;= #{openTime}
        </if>
        <if test="closeTime != null and closeTime != ''">
            AND GUIDE_CLOSETIME &lt;= #{closeTime}
        </if>
    </select>


</mapper>